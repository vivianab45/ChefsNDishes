@{
    ViewData["Title"]="All Dishes";
}

@model List<Dish>

<h1 class="text-center">Check out our tasty dishes!</h1>


<table class="table table-striped table-bordered">
    <thead>
        <th>Name</th>
        <th>Chef</th>
        <th>Tastiness</th>
        <th>Calories</th>
    </thead>
    <tbody>


            @foreach( Dish d in Model)
            {
                <tr>
                    <td>@d.Name</td>
                    <td>@d.Creator.FirstName @d.Creator.LastName</td>
                    <td>@d.Tastiness</td>
                    <td>@d.Calories</td>
                </tr>
            }

    </tbody>
</table>